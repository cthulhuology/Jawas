#!/bin/bash
#
# jawas init script
#

CONF=/usr/local/etc/jawas.conf 
. $CONF

case "$1" in
'stop')
	case "$2" in
	'prod')
		echo "Stopping Production";
		kill `cat $PROD/jawas.pid`
		;;
	*)
		echo "Stopping Development";
		kill `cat $DEV/jawas.pid`
		;;
	esac
	;;
'start)
	case "$2" in
	'prod')
		echo "Starting Production";
		cd $PROD && exec $CMD
		;;
	*)
		echo "Starting Development";
		cd $DEV && .exec $CMD
		;;
	esac
	;;
esac

